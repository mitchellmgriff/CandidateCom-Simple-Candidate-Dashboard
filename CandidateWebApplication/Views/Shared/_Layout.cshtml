<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CandidateWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CandidateWebApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand bg-gradient mx-auto p-auto align-content-lg-center ">
          
               
                    <ul class="navbar-nav text-warning">
                        <li class="nav-item">
                            <a class="nav-link text-warning lead" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning lead" asp-area="" asp-controller="Candidates" asp-action="Index">Candidates</a>
                        </li>
                <li class="nav-item">
                    <a class="nav-link text-warning lead" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                </li>
                        <li class="nav-tem text-warning">
                            <partial name="_LoginPartial"/>
                        </li>
                    </ul>
                
            
        </nav>
    </header>
   
        <main role="main" class="">
            @RenderBody()
        </main>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
