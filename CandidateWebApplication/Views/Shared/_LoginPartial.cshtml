@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav text-warning">
@if (SignInManager.IsSignedIn(User))
{
   
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-warning"><p class="lead">Logout</p></button>
        </form>
    </li>
        <li class="nav-item icon text-warning">
            <a id="manage" class="nav-item lead text-warning text-decoration-none icon" asp-area="Identity"  title="Manage"> Logged in as: @UserManager.GetUserName(User)</a>
        </li>
}
else
{
    
    <li class="nav-item">
        <a class="nav-link text-warning lead" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
